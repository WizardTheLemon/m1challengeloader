	<trigger id="crazyweather" repeat="10" autorun="true">
		<then>
			<random>
				<magick position="-20,-20,-20" magicktype="Tornado" delay="0"/>
			</random>
			<random>
				<magick position="0,20,-20" magicktype="Tornado" delay="0"/>
			</random>
			<random>
				<magick position="-20,-20,-20" magicktype="Tornado" delay="0"/>
			</random>
			<random>
				<magick position="0,20,-20" magicktype="Tornado" delay="0"/>
			</random>
			<random>
				<magick position="-30,-30,-30" magicktype="Tornado" delay="0"/>
			</random>
			<random>
				<magick position="0,-30,0" magicktype="Tornado" delay="0"/>
			</random>
			<random>
				<magick position="-30,-30,0" magicktype="Tornado" delay="0"/>
			</random>
			<random>
				<magick position="0,30,-30" magicktype="Tornado" delay="0"/>
			</random>
			<random>
				<executeTrigger trigger="crazyweather2" delay="0"/>
			</random>
		</then>
	</trigger>

	<trigger id="crazyweather2" repeat="true" autorun="false">
		<then>
			<random>
				<magick position="-20,-20,-20" magicktype="Tornado" delay="0"/>
			</random>
			<random>
				<magick position="0,20,-20" magicktype="Tornado" delay="0"/>
